{
  "name": "controle-espacos-de-ensino",
  "version": "1.0.0",
  "description": "Sistema de controle de espaços de ensino - PUCPR Case Técnico",
  "private": true,
  "workspaces": [
    "services/*",
    "frontend/*",
    "shared/*"
  ],
  "scripts": {
    "setup:env": "node scripts/setup-env.js",
    "setup:dev": "bash scripts/install-dev-deps.sh",
    "seed:all": "node scripts/seed-all.js",
    "test:from-scratch": "bash scripts/test-from-scratch.sh",
    "clean:all": "bash scripts/clean-all.sh",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:ps": "docker-compose ps",
    "dev": "concurrently -n \"AUTH,STUDENTS,ROOMS,CHECKIN,ANALYTICS,FRONTEND,STUDENT\" -c \"blue,green,yellow,magenta,cyan,white,red\" \"npm run dev:auth\" \"npm run dev:students\" \"npm run dev:spaces\" \"npm run dev:checkin\" \"npm run dev:analytics\" \"npm run dev:frontend\" \"npm run dev:student\"",
    "dev:auth": "cd services/auth-service && npm run start:dev",
    "dev:students": "cd services/students-service && npm run start:dev",
    "dev:spaces": "cd services/rooms-service && npm run start:dev",
    "dev:checkin": "cd services/checkin-service && npm run start:dev",
    "dev:analytics": "cd services/analytics-service && npm run start:dev",
    "dev:frontend": "cd frontend/admin && npm run dev",
    "dev:student": "cd frontend/student && npm run dev",
    "test": "npm run test --workspaces",
    "test:e2e": "cd frontend/admin && npm run test:e2e",
    "test:e2e:ui": "cd frontend/admin && npm run test:e2e:ui",
    "build": "npm run build --workspaces",
    "lint": "npm run lint --workspaces"
  },
  "keywords": [
    "pucpr",
    "case-tecnico",
    "ddd",
    "microservices",
    "nestjs",
    "react"
  ],
  "author": "Abimael Neto",
  "license": "MIT",
  "devDependencies": {
    "artillery": "^2.0.27",
    "axios": "^1.6.2",
    "concurrently": "^8.2.2",
    "mysql2": "^3.15.3"
  }
}
