{
  "name": "controle-espacos-de-ensino",
  "version": "1.0.0",
  "description": "Sistema de controle de espaços de ensino - PUCPR Case Técnico",
  "private": true,
  "workspaces": [
    "services/*",
    "frontend/*",
    "shared/*"
  ],
  "scripts": {
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:ps": "docker-compose ps",
    "docker:up:minimal": "docker-compose -f docker-compose.minimal.yml up -d",
    "docker:down:minimal": "docker-compose -f docker-compose.minimal.yml down",
    "dev:auth": "cd services/auth-service && npm run start:dev",
    "dev:students": "cd services/students-service && npm run start:dev",
    "dev:spaces": "cd services/spaces-service && npm run start:dev",
    "dev:checkin": "cd services/checkin-service && npm run start:dev",
    "dev:analytics": "cd services/analytics-service && npm run start:dev",
    "dev:frontend": "cd frontend/admin && npm run dev",
    "test": "npm run test --workspaces",
    "build": "npm run build --workspaces",
    "lint": "npm run lint --workspaces",
    "perf:auth": "artillery run tests/performance/auth-login.yml",
    "perf:checkin": "artillery run tests/performance/checkin-traefik.yml"
  },
  "keywords": [
    "pucpr",
    "case-tecnico",
    "ddd",
    "microservices",
    "nestjs",
    "react"
  ],
  "author": "Abimael Neto",
  "license": "MIT"
}

