{
  "dashboard": {
    "title": "Visão Geral de Check-ins",
    "tags": ["check-ins", "negócio"],
    "timezone": "browser",
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Total de Check-ins (Últimas 24h)",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(increase(checkins_performed_total[24h]))",
            "format": "none"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Check-ins por Hora",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(checkins_performed_total[1h]) * 3600",
            "legendFormat": "Check-ins/hora"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4}
      },
      {
        "id": 3,
        "title": "Check-ins por Método de Identificação",
        "type": "bargraph",
        "targets": [
          {
            "expr": "sum by (method) (increase(checkins_by_method_total[24h]))",
            "legendFormat": "{{method}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4}
      },
      {
        "id": 4,
        "title": "Taxa de Sucesso de Check-ins",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(checkins_performed_total[5m]) / (rate(checkins_performed_total[5m]) + rate(checkins_failed_total[5m])) * 100",
            "legendFormat": "Taxa de Sucesso (%)"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "yaxes": [{"format": "percent", "max": 100}]
      },
      {
        "id": 5,
        "title": "Tempo Médio de Processamento de Check-in (p95)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(checkin_duration_seconds_bucket[5m]))",
            "legendFormat": "{{room_id}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12}
      }
    ],
    "schemaVersion": 16,
    "version": 0
  }
}

